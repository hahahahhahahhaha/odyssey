---
import Layout from '../../layouts/Page.astro';
import { Container, Button } from '@components/odyssey-theme';

const seo = {
  title: 'Pricing | Astro Odyssey Theme',
  description: 'Choose the perfect plan with a 14-day free trial. No credit card required.',
};
---

<Layout seo={seo}>
  <Container>
    <section class="pricing-section">
      <div class="pricing-header">
        <h2 class="pricing-title">Choose the perfect plan</h2>
        <p class="pricing-description">
          Start with a 14-day free trial. No credit card required.
        </p>
      </div>
      <div class="pricing-grid">
        {/* Start of the first pricing card */}
        <div class="pricing-card">
          <div class="pricing-card-content">
            <h3 class="pricing-plan-title">Hobbyist</h3>
            <p class="pricing-plan-price">Free</p>
            <p class="pricing-plan-description">
              Perfect for experimenting with personal projects
            </p>
          </div>
          <div class="pricing-card-footer">
            <Button class="signup-button">Sign up</Button>
          </div>
        </div>
        {/* End of the first pricing card */}

        {/* Start of the highlighted pricing card */}
        <div class="pricing-card popular">
          <div class="popular-badge">Popular</div>
          <div class="pricing-card-content">
            <h3 class="pricing-plan-title">Professional</h3>
            <p class="pricing-plan-price">$20/month</p>
            <p class="pricing-plan-description">
              Robust features for deploying production applications
            </p>
          </div>
          <div class="pricing-card-footer">
            <Button class="signup-button">Sign up</Button>
          </div>
        </div>
        {/* End of the highlighted pricing card */}

        {/* Start of the third pricing card */}
        <div class="pricing-card">
          <div class="pricing-card-content">
            <h3 class="pricing-plan-title">Enterprise</h3>
            <p class="pricing-plan-price">Contact us</p>
            <p class="pricing-plan-description">
              Customizable solutions for your organization
            </p>
          </div>
          <div class="pricing-card-footer">
            <Button class="signup-button">Learn more</Button>
          </div>
        </div>
        {/* End of the third pricing card */}
      </div>
    </section>
  </Container>
</Layout>

<style>
  .pricing-section {
    padding: 3rem 0;
    text-align: center;
  }

  .pricing-header .pricing-title {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }

  .pricing-header .pricing-description {
    max-width: 700px;
    color: #64748b;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 2rem;
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 2rem;
    justify-content: center;
    justify-items: center; /* Centers the cards horizontally */
  }

  .pricing-card {
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* Ensures footer aligns to the bottom */
    border: 1px solid #e5e7eb;
    background-color: #ffffff;
    border-radius: 0.75rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: visible;
    width: 100%; /* Fixes width consistency */
    max-width: 300px; /* Adjust maximum width of the cards as necessary */
    position: relative; /* Needed for the positioning of the badge */
  }

  .pricing-card.popular {
    border-color: #8a4baf; /* Adjust this color to suit your site's theme */
  }

  .popular-badge {
    position: absolute;
    top: -1rem;
    left: 50%;
    transform: translateX(-50%);
    background-color: #8a4baf; /* Adjust this color to suit your site's theme */
    color: white;
    padding: 0.25rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: bold;
    text-transform: uppercase;
  }

  .pricing-card-content {
    padding: 1.5rem;
  }

  .pricing-card-footer {
    padding: 1rem;
    border-top: 1px solid #e5e7eb;
    background: #f9fafb;
    display: flex;
    justify-content: center; /* Center the button horizontally */
    align-items: center; /* Align the button vertically */
    margin-top: auto; /* Pushes the button to the bottom */
  }

  .signup-button {
    width: 100%; /* Ensures the button stretches to the width of the container */
    padding: 0.75rem 0; /* Provides padding to the button */
    border-radius: 0.375rem; /* Match your design's border radius */
  }

  @media (max-width: 768px) {
    .pricing-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
