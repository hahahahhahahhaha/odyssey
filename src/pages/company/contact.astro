---
import Layout from '../../layouts/Page.astro';
import { Container } from '@components/odyssey-theme';
import Contact from '../../components/forms/Contact.astro';

const seo = {
	title: 'Contact | Astro Odyssey Theme',
	description: 'We\'re here to help. Fill out the form below and we\'ll get back to you as soon as possible.',
};
---

<Layout seo={seo}>
	<Container>
		<div class="contact-page-container">
			<div class="company-info-container">
				<div class="company-info-card">
				  <h3 class="info-title">Company Name</h3>
				  <p class="info-description">
					The company description. The company description. The company description. The company description.
				  </p>
				  
				  <h3 class="info-title">Address</h3>
				  <p class="info-description">1234 Elm St. Springfield, IL 62701</p>
				  
				  <h3 class="info-title">Phone</h3>
				  <p class="info-description">(123) 456-7890</p>
				  
				  <h3 class="info-title">Email</h3>
				  <p class="info-description">info@example.com</p>
				</div>
			  </div>
			<Contact />
	</Container>
</Layout>

<style>
	.contact-page-container {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: 2rem;
		padding: 3rem 0;
	}
	
	.contact-form-container {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	
	.contact-title {
		font-size: 3xl;
		font-weight: bold;
	}
	
	.contact-description {
		color: #64748b;
	}
	
	.contact-form {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	
	.form-label {
		font-size: 1rem;
	}
	
	.form-input,
	.form-textarea {
		border: 1px solid #e5e7eb;
		border-radius: 0.375rem;
		padding: 0.5rem;
		font-size: 1rem;
	}
	
	.form-button {
		background-color: #007bff;
		color: white;
		border-radius: 0.375rem;
		padding: 0.75rem 1.5rem;
		font-weight: 500;
		margin-top: 1rem;
		border: none;
		cursor: pointer;
	}
	
	.company-info-container {
		border: 1px solid #e5e7eb;
		border-radius: 0.75rem;
		padding: 2rem;
		background-color: white;
	}
	
	.info-title {
		font-size: 1.25rem;
		font-weight: semibold;
	}
	
	.info-description {
		color: #64748b;
		font-size: 0.875rem;
		margin-bottom: 1rem;
	}
	
	@media (max-width: 768px) {
		.contact-page-container {
			grid-template-columns: 1fr;
		}
	}

			  .company-info-container {
				padding: 2rem;
				background-color: #ffffff; /* or any color that fits your design */
				border-radius: 0.5rem;
				box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1); /* subtle shadow */
				max-width: 400px; /* adjust to your preference */
				margin: auto; /* centers the card in the container */
			  }
			  
			  .company-info-card {
				display: flex;
				flex-direction: column;
				gap: 1rem;
			  }
			  
			  .info-title {
				font-size: 1.25rem;
				font-weight: bold;
				color: #333; /* or any color that fits your design */
				margin-bottom: 0.25rem; /* spacing between title and description */
			  }
			  
			  .info-description {
				font-size: 1rem;
				color: #666; /* or any color that fits your design */
				line-height: 1.6;
			  }
</style>
